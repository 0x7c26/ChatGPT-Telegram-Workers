{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "ESNext",
            "dom"
        ],
        "rootDir": ".",
        "types": ["node"],
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "composite": true
    },
    "exclude": ["**/node_modules", "**/dist"]
}