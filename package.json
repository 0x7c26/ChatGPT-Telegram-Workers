{
    "name": "chatgpt-telegram-workers",
    "type": "module",
    "version": "1.10.2",
    "description": "The easiest and quickest way to deploy your own ChatGPT Telegram bot is to use a single file and simply copy and paste it. There is no need for any dependencies, local development environment configuration, domain names, or servers.",
    "author": "tbxark <tbxark@outlook.com>",
    "license": "MIT",
    "repository": "git@github.com:TBXark/ChatGPT-Telegram-Workers.git",
    "scripts": {
        "lint": "eslint --fix *.js *.ts packages plugins scripts",
        "version": "tsx scripts/gen-version.ts",
        "build": "pnpm run version && pnpm -r run build && cp packages/apps/workers/dist/index.js dist/index.js",
        "deploy:dist": "wrangler deploy",
        "deploy:build": "pnpm run build && wrangler deploy",
        "wrangler": "wrangler"
    },
    "workspaces": [
        "packages/app/*",
        "packages/lib/*",
        "packages/plugins/*"
    ],
    "devDependencies": {
        "wrangler": "^3.86.1",
        "@types/node": "^18.0.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "vite": "^5.4.11",
        "vite-plugin-checker": "^0.8.0",
        "vite-plugin-dts": "^4.3.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "rollup-plugin-node-externals": "^7.1.3",
        "rollup-plugin-cleanup": "^3.2.1",
        "stylelint": "^16.10.0",
        "@antfu/eslint-config": "^3.8.0",
        "eslint": "^9.14.0",
        "eslint-plugin-format": "^0.1.2"
    }
}
